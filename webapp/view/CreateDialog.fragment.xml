<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core"
   xmlns:f="sap.ui.layout.form" >
	
   <Dialog
      id="CreateDialog"
      title="Create Employee">
		
		<!-- Input Field -->
		<f:SimpleForm>
			
			<Label text="Employee ID" />
			<Input 
				id="InputID" 
				type="Text"
				width="250px" 
				maxLength="25" />
				
			<Label text="Employee Name"/>
			<Input 
				id="InputName" 
				type="Text"
				width="250px" 
				maxLength="25" />
				
	   		<Label text="Employee Address"/>
	   		<Input 
				id="InputAddress" 
				type="Text"
				width="250px" 
				maxLength="25" />
				
	   		<Label text="Employee E-Mail"/>
	   		<Input 
				id="InputEmail" 
				type="Text"
				width="250px" 
				maxLength="25" />
				
		</f:SimpleForm>
	
	   	<!-- Save Button & Cancel Button -->
	   	
	   	<Panel>
		   	<Button
	    	text="Save"
	    	id="ClickSave"
	    	press="ClickSave"
	    	class="sapUiTinyMargin" /> 
	    	
	    	<Button
	    	text="Cancel"
	    	id="ClickCancel"
	    	press="ClickCancel"
	    	class="sapUiTinyMargin" /> 
    	</Panel>
    	
   </Dialog>
</core:FragmentDefinition>